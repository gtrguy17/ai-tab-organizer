{
  "name": "ai-tab-organizer",
  "version": "1.1",
  "scripts": {
    "build": "npm run build:css && npm run build:ts",
    "build:ts": "tsup",
    "build:css": "npx tailwindcss -i ./src/main.css -o ./public/main.css --minify",
    "watch": "concurrently -n ts,css -c blue,yellow npm:watch:ts npm:watch:css",
    "watch:ts": "tsup --watch",
    "watch:css": "npm run build:css -- --watch"
  },
  "dependencies": {
    "ky": "^0.33.3",
    "lodash-es": "^4.17.21",
    "zod": "^3.21.4",
    "zod-to-json-schema": "^3.21.4"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.243",
    "@types/lodash-es": "^4.17.8",
    "concurrently": "^8.2.0",
    "tailwindcss": "^3.3.3",
    "tsup": "^7.2.0",
    "typescript": "^5.1.0"
  }
}
